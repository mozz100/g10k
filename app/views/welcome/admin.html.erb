<div ng-app="g10kAdminApp">
	<div ng-controller="AdminCtrl">
	    <div style="height: 2em;">
	        <button class="btn btn-default" ng-click="startRace()" ng-show="race.state == 'unstarted'">Start race</button>
	        <button class="btn btn-default" ng-click="resetRace()">Reset race</button>
	    </div>

	    <table class="table table-striped table-bordered">
	    	<tr>
	    		<th>Name</th>
	    		<th>50%</th>
	    		<th>Finished</th>
	    		<th>Status</th>
	    	</tr>
	    	<tr ng-repeat="runner in race.runners">
	    		<td>{{ runner.name }}</td>
	    		<td class="action">
	    			<input ng-disabled="getCheckPoint(runner.id, 50)"  type="radio" name="action" ng-model="checkpoint.value" value="{{ runner.id }}|50"></input>
	    		</td>
	    		<td class="action">
	    			<input ng-disabled="getCheckPoint(runner.id, 100)"  type="radio" name="action" ng-model="checkpoint.value" value="{{ runner.id }}|100"></input>
	    		</td>
	    		<td>{{ runner.status }}</td>
	    	</tr>
	    </table>

	    <button class="btn btn-large btn-primary" ng-click="submitAction()" ng-show="race.state == 'running'">NOW!</button>
	    <pre>{{ checkpoint }}</pre>
	</div>

</div>