<p id="notice"><%= notice %></p>

<h1>Listing Runners</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Race number</th>
      <th>Name</th>
      <th>Email</th>
      <th>Expected duration</th>
      <th>Actual duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runners.each do |runner| %>
      <tr>
        <td><%= runner.race_number %></td>
        <td><%= runner.name %></td>
        <td><%= runner.email %></td>
        <td><%= number_with_precision(runner.expected_duration, precision: 2) %></td>
        <td>
          <% if runner.actual_finish_time and runner.start_time %>
            <%= number_with_precision(runner.actual_finish_time - runner.start_time, precision: 2)%>
          <% endif %>
        </td>
        <td><%= link_to 'Show', runner %></td>
        <td><%= link_to 'Edit', edit_runner_path(runner) %></td>
        <td><%= link_to 'Destroy', runner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

